{
  "name": "ps-color-scripts-enhanced",
  "version": "2025.10.12",
  "description": "Enhanced PowerShell ColorScripts with high-performance caching system. Display beautiful ANSI art in your terminal with 6-19x faster load times. 245+ colorscripts included.",
  "main": "Convert-AnsiToColorScript.js",
  "directories": {
    "doc": "docs",
    "test": "tests",
    "ColorScripts-Enhanced": "ColorScripts-Enhanced",
    "oversized-colorscripts": "oversized-colorscripts",
    "ansi-files": "ansi-files",
    "types": "types",
    ".github": ".github"
  },
  "scripts": {
    "build": "pwsh -NoProfile -File ./build.ps1",
    "build:skip-help": "pwsh -NoProfile -File ./build.ps1 -SkipHelp",
    "build:help": "pwsh -NoProfile -File ./Build-Help.ps1",
    "lint": "pwsh -NoProfile -File ./Lint-Module.ps1",
    "lint:strict": "pwsh -NoProfile -File ./Lint-Module.ps1 -IncludeTests -TreatWarningsAsErrors",
    "lint:fix": "pwsh -NoProfile -File ./Lint-Module.ps1 -Fix",
    "test": "pwsh -NoProfile -File ./Test-Module.ps1",
    "test:pester": "pwsh -NoProfile -Command \"Invoke-Pester -Path ./Tests\"",
    "docs:update-counts": "pwsh -NoProfile -File ./Update-DocumentationCounts.ps1",
    "scripts:convert": "node ./Convert-AnsiToColorScript.js",
    "scripts:convert:ps": "pwsh -NoProfile -File ./Convert-AnsiToColorScript.ps1",
    "scripts:convert:advanced": "pwsh -NoProfile -File ./Convert-AnsiToColorScript-Advanced.ps1",
    "scripts:split": "node ./scripts/Split-AnsiFile.js",
    "scripts:count": "pwsh -NoProfile -File ./Get-ColorScriptCount.ps1",
    "scripts:test-all": "pwsh -NoProfile -File ./ColorScripts-Enhanced/Test-AllColorScripts.ps1",
    "verify": "npm run lint:strict && npm run test && npm run test:pester"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nick2bad4u/ps-color-scripts-enhanced.git"
  },
  "keywords": [
    "powershell",
    "ansi",
    "colorscripts",
    "terminal",
    "cli",
    "ascii-art",
    "shell",
    "windows",
    "macos",
    "linux",
    "cross-platform"
  ],
  "author": "Nick2bad4u",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Nick2bad4u/ps-color-scripts-enhanced/issues"
  },
  "homepage": "https://github.com/Nick2bad4u/ps-color-scripts-enhanced#readme",
  "dependencies": {
    "iconv-lite": "^0.7.0",
    "node-ansiparser": "^2.2.1"
  }
}
